@base = http://127.0.0.1:8000/service
@token = <PUT_YOUR_JWT_ACCESS_TOKEN_HERE>
@service_id = 12
@service_type_id = 5
@rating_id = 45
@unit_id = 2
@category_id = 5

###
# Service Categories — List (search/order supported)
GET {{base}}/categories/?search=plumb&ordering=-created_at

###
# Services — List (filters: search, ordering, category, unit; include_types=1|true|yes)
GET {{base}}/services/
# Examples:
# GET {{base}}/services/?search=plumb&ordering=-avg_rating
# GET {{base}}/services/?category={{category_id}}&ordering=price
# GET {{base}}/services/?unit={{unit_id}}&include_types=1

###
# Service Types — List (filter by service)
GET {{base}}/service-types/
# Examples:
# GET {{base}}/service-types/?service={{service_id}}
# GET {{base}}/service-types/?search=emergency&ordering=-price

###
# Service Type — Detail
GET {{base}}/service-types/{{service_type_id}}/

###
# Ratings — List (public; search/order supported)
GET {{base}}/ratings/?search=pipe&ordering=-rating

###
# Ratings — Create (auth required)
POST {{base}}/ratings/
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "service": {{service_id}},
  "rating": 5,
  "review": "Excellent!"
}

###
# Rating — Retrieve
GET {{base}}/ratings/{{rating_id}}/

###
# Rating — Update (auth + owner)
PATCH {{base}}/ratings/{{rating_id}}/
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "rating": 4,
  "review": "Good, but price high."
}

###
# Rating — Delete (auth + owner)
DELETE {{base}}/ratings/{{rating_id}}/
Authorization: Bearer {{token}}

###
# My Ratings — List (auth)
GET {{base}}/ratings/mine/
Authorization: Bearer {{token}}

###
# Service Ratings — List (public)
GET {{base}}/services/{{service_id}}/ratings/?ordering=-created_at

###
# Units — List (public)
GET {{base}}/units/

###
# Unit — Detail (public)
GET {{base}}/units/{{unit_id}}/
